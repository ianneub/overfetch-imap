# ActionMailbox Ingress URL
# This is the endpoint where emails will be sent
RAILS_MAIL_INBOUND_URL=https://example.com/rails/action_mailbox/postfix/inbound_emails

# ActionMailbox Ingress Password
# This is the authentication password for the ingress endpoint
INGRESS_PASSWORD=your-secret-password-here

# IMAP Server Configuration
MAIL_SERVER=imap.example.com
MAIL_PORT=993
USERNAME=user@example.com
PASSWORD=your-imap-password

# Email Retention
# Set to "keep" to retain emails on the server after processing
# Leave empty or unset to delete emails after processing
KEEP=

# SSL/TLS Configuration
# Set to "true" to disable SSL/TLS encryption (NOT RECOMMENDED for production)
# Leave empty or unset to enable SSL/TLS with certificate verification (default)
# WARNING: Disabling SSL sends credentials and email content in plain text
DISABLE_SSL=
